.side-bar
  .side-bar__header
    .side-bar-box
      .side-bar-box__user-name
      = current_user.name
      .icon
        .edit__btn--icon
        = link_to new_group_path do
          = icon('far', 'edit', class: "edit__btn--icon")
        .new__btn--icon
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: "new__btn--icon")
  .side-bar__group-list
    - current_user.groups.each do |group|
      .groups
        = link_to group_messages_path(group) do
          .groups__group-list
            = group.name
          .groups__group-message
            = group.show_last_message